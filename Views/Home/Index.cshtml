            <div class="skill-badge text-center">
              <svg width="56" height="56" viewBox="0 0 128 128">
                <path fill="#E34F26" d="M19.6 114L10 0h108l-9.6 114-44.4 12.4z" />
                <path fill="#EF652A" d="M64 117.6l35.8-9.8 8.2-92.1H64z" />
                <path fill="#fff"
                  d="M64 52.9h-15.5l1.1 12.4H64v-12.4zM64 27.6H36.2l1.3 14.6H64V27.6zM64 88.1l-.2.1-20.1-5.5 1.3-14.6H35.4L36 95.8 64 106.4v-18.3zM64 52.9v12.4h22.3l-1.9 21.5L64 88.1V52.9z" />
              </svg>
              <div class="small mt-1">HTML5</div>
            </div>

            <!-- CSS3 -->
            <div class="skill-badge text-center">
              <svg width="56" height="56" viewBox="0 0 128 128">
                <path fill="#1572B6" d="M19.6 114L10 0h108l-9.6 114-44.4 12.4z" />
                <path fill="#33A9DC" d="M64 117.6l35.8-9.8 8.2-92.1H64z" />
                <path fill="#fff"
                  d="M64 52.9h-15.5l1.1 12.4H64v-12.4zM64 27.6H36.2l1.3 14.6H64V27.6zM64 88.1l-.2.1-20.1-5.5 1.3-14.6H35.4L36 95.8 64 106.4v-18.3zM64 52.9v12.4h22.3l-1.9 21.5L64 88.1V52.9z" />
              </svg>
              <div class="small mt-1">CSS3</div>
            </div>

            <!-- JavaScript -->
            <div class="skill-badge text-center">
              <svg width="56" height="56" viewBox="0 0 128 128">
                <path fill="#F7DF1E" d="M1.408 1.408h125.184v125.184H1.408z" />
                <path
                  d="M93.125 98.64c2.984 4.718 6.81 8.213 14.666 8.213 6.121 0 10.01-3.054 10.01-7.27 0-5.054-3.991-6.847-10.744-9.8l-3.685-1.55c-10.655-4.47-17.717-10.09-17.717-22.01 0-10.936 8.354-19.29 21.42-19.29 9.285 0 15.94 3.2 20.77 11.543l-11.37 7.29c-2.508-4.49-5.22-6.27-9.4-6.27-4.27 0-6.99 2.71-6.99 6.27 0 4.385 2.71 6.175 9 8.88l3.685 1.55c12.55 5.2 19.61 10.88 19.61 23.5 0 13.5-10.63 20.84-24.95 20.84-13.98 0-22.93-6.64-27.26-15.34z"
                  fill="#000" />
              </svg>
              <div class="small mt-1">JavaScript</div>
            </div>

            <!-- .NET -->
            <div class="skill-badge text-center">
              <svg width="56" height="56" viewBox="0 0 24 24">
                <circle cx="12" cy="12" r="10" fill="#512BD4" />
                <path d="M6 12a6 6 0 0 0 12 0" stroke="#fff" stroke-width="1.2" fill="none" />
              </svg>
              <div class="small mt-1">.NET</div>
            </div>

            <!-- React -->
            <div class="skill-badge text-center">
              <svg width="56" height="56" viewBox="0 0 128 128">
                <g fill="none" stroke="#61DAFB" stroke-width="6" stroke-linecap="round" stroke-linejoin="round">
                  <ellipse cx="64" cy="64" rx="40" ry="16" transform="rotate(60 64 64)" />
                  <ellipse cx="64" cy="64" rx="40" ry="16" transform="rotate(-60 64 64)" />
                  <ellipse cx="64" cy="64" rx="40" ry="16" />
                </g>
                <circle cx="64" cy="64" r="8" fill="#61DAFB" />
              </svg>
              <div class="small mt-1">React</div>
            </div>

            <!-- Node.js -->
            <div class="skill-badge text-center">
              <svg width="56" height="56" viewBox="0 0 128 128">
                <polygon fill="#8CC84B" points="64,8 112,36 112,92 64,120 16,92 16,36" />
                <text x="64" y="77" text-anchor="middle" fill="#fff" font-size="36" font-family="Arial">js</text>
              </svg>
              <div class="small mt-1">Node.js</div>
            </div>
          </div>
        </div>
      </div>
    </div>
    @* <partial name="_education.cshtml" /> *@
    @await Html.PartialAsync("_experience")
    @await Html.PartialAsync("_education")

    


    
  </div>
</div>
@section Scripts {
  
  <script>
    $(document).ready(function () {
      // Duplicate slides to prevent blank space
      var $marquee = $('.slick.marquee');
      var $slides = $marquee.children().clone();
      $marquee.append($slides);  // duplicate slides

      $marquee.slick({
        speed: 4000,             // scroll speed
        autoplay: true,
        autoplaySpeed: 0,        // no pause between scrolls
        cssEase: 'linear',       // continuous motion
        slidesToShow: 4,         // number visible at once
        slidesToScroll: 1,
        variableWidth: true,
        infinite: true,
        arrows: false,
        pauseOnHover: false,
        pauseOnFocus: false,
      });

    });
  </script>
}