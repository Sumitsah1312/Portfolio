<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sumit Shah Portfolio</title>
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" /> *@
    <!-- CSS -->
    <link rel="stylesheet" href="~/lib/css/bootstrap5.css" />
    <link rel="stylesheet" href="~/lib/css/slick.css" />
    <link rel="stylesheet" href="~/lib/css/slicktheme.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @* <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/> *@
    @* <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"/> *@

</head>

<body class="text-light">
    <canvas id="spaceCanvas"></canvas>

    <nav class="navbar navbar-expand-lg fixed-top classy-navbar">
        <div class="container">
            <a class="navbar-brand" href="/">Sumit Shah</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse mt-sm-2" id="navMenu">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Education">Education</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Experience">Experience</a></li>
                    @* <li class="nav-item"><a class="nav-link" href="/Projects">Projects</a></li> *@
                    <li class="nav-item"><a class="nav-link" href="/Contact">Let's Connect</a></li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="container-fluid " style="padding-top:80px;">
        @RenderBody()
    </div>
    @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> *@
    @* <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script> *@

</body>
<div class="footercontainer"></div>
<footer id="siteFooter" class="framer-footer text-light">
    <div id="footerParticles" style="height:40px;"></div>

    <div class="footer-content container text-center">
        <h2 class="footer-title mb-3">Let's collaborate?</h2>
        <p class="footer-subtitle mb-4">
            I'm open for exciting opportunities — feel free to reach out!
        </p>

        <div class="footer-buttons mb-4">
            <a href="/pdf/SumitShah_CV.pdf" class="btn-footer-outline mt-2 mb-2" download>Resume</a>
            <a href="/Contact" class="btn-footer-solid mt-2 mb-2">Get In Touch</a>
        </div>

        <p class="footer-crafted">
            Crafted by <strong>Sumit Shah</strong> with ❤️
        </p>
    </div>
</footer>
<!-- ✅ Correct JS order -->
<script src="~/lib/js/jquerymin.js"></script> <!-- jQuery first -->
<script src="~/lib/js/bootstrap5.js"></script> <!-- then Bootstrap -->
<script src="~/lib/js/slickcarousel.js"></script> <!-- then Slick Carousel -->
<script src="~/lib/js/three.js"></script> <!-- then Three.js -->
<script src="~/js/footerParticles.js"></script> <!-- depends on Three.js -->
<script src="~/lib/js/particle.js"></script> <!-- optional, if it uses three -->
<script src="~/js/site.js"></script> <!-- your custom scripts last -->

@* <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script> *@
@* <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> *@
@* <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script> *@

@RenderSection("Scripts", required: false)


</html>